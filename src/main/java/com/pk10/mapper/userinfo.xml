<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pk10.dao.UserInfoDao">
	<resultMap type="com.pk10.bean.UserInfo" id="UserInfo">
		<result column="id" property="id" />
		<result column="username" property="username" />
		<result column="openid" property="openid" />
		<result column="openid" property="openid" />
		<result column="nickname" property="nickname" />
		<result column="money" property="money" />
		<result column="createdAt" property="createdAt" />
	</resultMap>

	<insert id="save" parameterType="com.pk10.bean.UserInfo" flushCache="true">
		insert into userinfo(openid,nickname,money,createdAt,username,password,tel)
		values(#{openid},#{nickname},#{money},#{createdAt},#{username},#{password},#{tel})
	</insert>

	<update id="update" parameterType="com.pk10.bean.UserInfo" flushCache="true">
		update userinfo u set u.money = #{money},u.nickname =#{nickname},username=#{username},password=#{password},tel=#{tel} where u.id = #{id}
	</update>

	<select id="getAll" resultMap="UserInfo">
		select id,openid,nickname,money,createdAt,username,password,tel from userinfo
	</select>

	<select id="getOneById" parameterType="com.pk10.bean.UserInfo" resultMap="UserInfo">
		select id,openid,nickname,money,createdAt,username,password,tel from userinfo u where u.id = #{id}
	</select>

	<select id="getUserInfoByTel" parameterType="com.pk10.bean.UserInfo" resultMap="UserInfo">
		select id,openid,nickname,money,createdAt,username,password,tel from userinfo u where u.tel = #{tel}
	</select>
	<select id="login" parameterType="com.pk10.bean.UserInfo" resultMap="UserInfo">
		select id,openid,nickname,money,createdAt,username,password,tel from userinfo u where u.username = #{username} and
		u.password = #{password}
	</select>
	<select id="getUserInfoByUsername" parameterType="com.pk10.bean.UserInfo" resultMap="UserInfo">
		select id,openid,nickname,money,createdAt,username,password,tel from userinfo u where u.username =
		#{username}
	</select>
	<delete id="deleteOneById" parameterType="com.pk10.bean.UserInfo">
		delete from userinfo where username = #{username}
	</delete>

</mapper>